{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build:shared && npm run build:backend"
  },
  "deploy": {
    "startCommand": "cd backend && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "NPM_CONFIG_OMIT": "dev",
    "PORT": "8080",
    "NODE_ENV": "production"
  }
}
