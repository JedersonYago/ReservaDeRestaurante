{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["VITE_API_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "build:frontend": {
      "dependsOn": ["^build"],
      "outputs": ["frontend/dist/**"],
      "cache": true
    },
    "build:backend": {
      "dependsOn": ["^build"],
      "outputs": ["backend/dist/**"],
      "cache": true
    },
    "build:shared": {
      "outputs": ["shared/dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:backend": {
      "cache": false,
      "persistent": true
    },
    "dev:frontend": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true,
      "outputs": []
    },
    "test": {
      "cache": true,
      "outputs": ["coverage/**"]
    }
  }
}
