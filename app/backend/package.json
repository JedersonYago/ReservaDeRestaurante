{
  "name": "reserva-facil-backend",
  "private": true,
  "description": "Backend do ReservaFacil",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/backend/src/index.js",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "build": "tsc && npm run copy-shared && npm run fix-imports",
    "copy-shared": "node copy-shared.js",
    "fix-imports": "node fix-imports.js",
    "test": "jest --config backend/jest.config.js",
    "test:watch": "jest --config backend/jest.config.js --watch",
    "test:coverage": "jest --config backend/jest.config.js --coverage",
    "test:verbose": "jest --config backend/jest.config.js --verbose",
    "test:models": "jest --config backend/jest.config.js --testPathPatterns=models",
    "test:controllers": "jest --config backend/jest.config.js --testPathPatterns=controllers",
    "test:integration": "jest --config backend/jest.config.js --testPathPatterns=controllers",
    "test:unit": "jest --config backend/jest.config.js --testPathPatterns=models --testPathPatterns=utils",
    "test:performance": "artillery run src/__tests__/artillery/artillery-performance.yml -o src/__tests__/artillery/report.json",
    "test:stress": "artillery run src/__tests__/artillery/artillery-stress.yml -o src/__tests__/artillery/report.json",
    "test:smoke": "artillery run src/__tests__/artillery/artillery-smoke.yml -o src/__tests__/artillery/report.json",
    "test:smoke:dev": "NODE_ENV=development artillery run src/__tests__/artillery/artillery-smoke.yml -o src/__tests__/artillery/report.json",
    "test:performance:dev": "NODE_ENV=development artillery run src/__tests__/artillery/artillery-performance.yml -o src/__tests__/artillery/report.json",
    "test:stress:dev": "NODE_ENV=development artillery run src/__tests__/artillery/artillery-stress.yml -o src/__tests__/artillery/report.json",
    "test:smoke:with-db": "NODE_ENV=test ALLOW_TEST_DB_CONNECTION=true artillery run src/__tests__/artillery/artillery-smoke.yml -o src/__tests__/artillery/report.json",
    "test:performance:with-db": "NODE_ENV=test ALLOW_TEST_DB_CONNECTION=true artillery run src/__tests__/artillery/artillery-performance.yml -o src/__tests__/artillery/report.json",
    "test:stress:with-db": "NODE_ENV=test ALLOW_TEST_DB_CONNECTION=true artillery run src/__tests__/artillery/artillery-stress.yml -o src/__tests__/artillery/report.json",
    "test:report": "node scripts/performance-report.js src/__tests__/artillery/report.json",
    "setup:test-users": "node scripts/create-artillery-users.js src/__tests__/artillery/artillery-users.csv",
    "update-tables": "node scripts/update-artillery-tables.js",
    "get-admin-token": "node scripts/get-admin-token.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "overrides": {
    "glob": "^10.3.10",
    "inflight": "npm:@isaacs/inflight@^1.0.1"
  },
  "dependencies": {
    "@restaurant-reservation/shared": "*",
    "@types/compression": "^1.8.1",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nodemailer": "^7.0.5",
    "zod": "^3.22.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bcryptjs": "^2.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "jest": "^30.0.4",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.32.1"
  }
}
