{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "ES2020",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.ts",
    "constants/**/*.ts",
    "patterns/**/*.ts", 
    "types/**/*.ts",
    "utils/**/*.ts",
    "validation/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
