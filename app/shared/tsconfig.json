{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "removeComments": true,
    "noEmitOnError": false,
    "types": []
  },
  "include": [
    "index.ts",
    "constants/**/*.ts",
    "patterns/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts",
    "validation/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
